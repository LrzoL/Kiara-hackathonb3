# ===============================================
# GitHub Documentation Agent - Configuration
# ===============================================

# GitHub Configuration (Required for GitHub repositories)
# Get your token at: https://github.com/settings/tokens
# Required scopes: repo, read:user, user:email
GITHUB_TOKEN=ghp_your_github_token_here
GITHUB_API_URL=https://api.github.com

# Azure DevOps Configuration (Required for Azure DevOps repositories)
# Get your PAT at: https://dev.azure.com/{organization}/_usersSettings/tokens
# Required scopes: Code (read)
AZURE_DEVOPS_PAT=your_azure_devops_pat_token_here

# Oracle Cloud Infrastructure AI Configuration (Primary)
# Configure OCI credentials at: ~/.oci/config
OCI_COMPARTMENT_ID=ocid1.tenancy.oc1..your_compartment_id_here
OCI_CONFIG_PROFILE=DEFAULT
OCI_MODEL_ID=meta.llama-4-maverick-17b-128e-instruct
OCI_MODEL_VISION=Scout
OCI_ENDPOINT=https://inference.generativeai.us-chicago-1.oci.oraclecloud.com
OCI_MAX_TOKENS=4000
OCI_TEMPERATURE=0.2
OCI_ENABLED=true

# Oracle Cloud Backup Configuration (Secondary models)
OCI_FALLBACK_MODEL=meta.llama-4-maverick-17b-128e-instruct
OCI_VISION_MODEL=Scout

# MCP Configuration
# GitHub MCP Server settings
MCP_SERVER_COMMAND=npx
MCP_SERVER_ARGS=["@github/github-mcp-server"]

# Application Settings
APP_LOG_LEVEL=INFO
APP_RATE_LIMIT_REQUESTS=30
APP_RATE_LIMIT_PERIOD=60

# Vision Processing
VISION_ANALYSIS_ENABLED=true
VISION_MAX_IMAGE_SIZE=5242880
VISION_SUPPORTED_FORMATS=png,jpg,jpeg,gif,bmp,webp,svg

# Cache Settings
CACHE_ENABLED=true
CACHE_TTL=3600

# FastAPI Settings (for API mode)
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true

# Security (for production)
# CORS_ORIGINS=["http://localhost:3000", "https://yourdomain.com"]
# API_SECRET_KEY=your_secret_key_here